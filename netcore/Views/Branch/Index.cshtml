@model IEnumerable<netcore.Models.Invent.Branch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
}


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.branchName)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.street1)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.street2)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.province)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.country)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.branchId"><i class="fa fa-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.branchId"><i class="fa fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.branchId"><i class="fa fa-trash"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.branchName)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.street1)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.street2)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.province)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.country)
            </td>

        </tr>
        }
    </tbody>
</table>
